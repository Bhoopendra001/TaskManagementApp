@model TaskManagementApp.Models.TaskModel

@{
    ViewBag.Title = "Delete Task";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Task</h2>

<h4 class="text-danger">Are you sure you want to delete this task?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-3">Title</dt>
    <dd class="col-sm-9">@Model.Title</dd>
    <br />
    <dt class="col-sm-3">Description</dt>
    <dd class="col-sm-9">@Model.Description</dd>
    <br />
    <dt class="col-sm-3">Due Date</dt>
    <dd class="col-sm-9">@Model.DueDate.ToString("yyyy-MM-dd")</dd>
    <br />
    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@Model.Status</dd>
    <br />
    <dt class="col-sm-3">Remarks</dt>
    <dd class="col-sm-9">@Model.Remarks</dd>
    <br />
    <dt class="col-sm-3">Created On</dt>
    <dd class="col-sm-9">@Model.CreatedOn.ToString("yyyy-MM-dd")</dd>
    <br />
    <dt class="col-sm-3">Updated On</dt>
    <dd class="col-sm-9">@Model.UpdatedOn.ToString("yyyy-MM-dd")</dd>
    <br />
    <dt class="col-sm-3">Created By</dt>
    <dd class="col-sm-9">@Model.CreatedBy</dd>
    <br />
    <dt class="col-sm-3">Updated By</dt>
    <dd class="col-sm-9">@Model.UpdatedBy</dd>
</dl>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.TaskId)

    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary ml-2" })
    </div>
}
